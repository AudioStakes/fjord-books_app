<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %>
  <%= f.text_area :self_introduction %>
</div>

<div class="field">
  <%= f.label :icon %>
  <%= f.file_field :icon, accept: 'image/png, image/gif, image/jpeg' %>

  <% if f.object.icon.attached? %>
    <div>
      <%= t('views.common.current', name: User.human_attribute_name(:icon)) %>:
      <%= image_tag(f.object.icon.variant(resize_to_limit: [200, 200])) %></td>
    </div>
  <% end %>
</div>
